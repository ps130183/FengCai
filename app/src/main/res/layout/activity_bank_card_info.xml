<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wzdq.fengcai.module.mine.account.bank.BankCardInfoActivity">

    <View
        android:id="@+id/bgView"
        android:layout_width="0dp"
        android:layout_height="175dp"
        android:background="@color/colorWhite"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0"
        android:layout_marginTop="15dp"/>

    <View
        android:id="@+id/divideLine"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/divide_color"
        android:layout_marginBottom="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/bgView"
        app:layout_constraintTop_toTopOf="@+id/bgView"
        app:layout_constraintLeft_toLeftOf="@+id/bgView"
        app:layout_constraintRight_toRightOf="@+id/bgView"
        app:layout_constraintVertical_bias="0"
        android:layout_marginTop="75dp"/>
    <com.ps.glidelib.GlideImageView
        android:id="@+id/bankCardLogo"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@mipmap/icon_icbc"
        app:siv_shape_type="circle"
        app:layout_constraintTop_toTopOf="@+id/bgView"
        app:layout_constraintBottom_toTopOf="@+id/divideLine"
        app:layout_constraintLeft_toLeftOf="@+id/bgView"
        app:layout_constraintRight_toLeftOf="@+id/bankCardName"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginLeft="15dp"
        />

    <TextView
        android:id="@+id/bankCardName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="中国工商银行"
        android:textSize="@dimen/textSize14"
        android:textColor="@color/colorBlockRgb242424"
        app:layout_constraintLeft_toRightOf="@+id/bankCardLogo"
        app:layout_constraintTop_toTopOf="@+id/bgView"
        app:layout_constraintBottom_toTopOf="@+id/bankCardNo"
        app:layout_constraintRight_toRightOf="@+id/bgView"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/bankCardNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="尾号1234"
        android:textSize="@dimen/textSize14"
        android:textColor="@color/colorBlockRgb696969"
        app:layout_constraintLeft_toLeftOf="@+id/bankCardName"
        app:layout_constraintTop_toBottomOf="@+id/bankCardName"
        app:layout_constraintBottom_toBottomOf="@id/divideLine"
        app:layout_constraintRight_toRightOf="@+id/bankCardName"
        android:layout_marginTop="2dp"
        app:layout_constraintHorizontal_bias="0"
        />

    <View
        android:id="@+id/divideLine2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/divide_color"
        app:layout_constraintTop_toBottomOf="@+id/divideLine"
        app:layout_constraintLeft_toLeftOf="@id/bankCardLogo"
        app:layout_constraintRight_toRightOf="@id/bgView"
        app:layout_constraintBottom_toBottomOf="@+id/bgView"/>


    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="持卡人姓名："
        android:textSize="@dimen/textSize14"
        android:textColor="@color/colorBlockRgb555555"
        app:layout_constraintTop_toBottomOf="@+id/divideLine"
        app:layout_constraintBottom_toTopOf="@id/divideLine2"
        app:layout_constraintLeft_toLeftOf="@+id/divideLine2"
        />

    <TextView
        android:id="@+id/tvPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="银行预留手机号："
        android:textSize="@dimen/textSize14"
        android:textColor="@color/colorBlockRgb555555"
        app:layout_constraintTop_toBottomOf="@+id/divideLine2"
        app:layout_constraintBottom_toBottomOf="@id/bgView"
        app:layout_constraintLeft_toLeftOf="@+id/divideLine2"
        />

    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="**雅芳"
        android:textSize="@dimen/textSize14"
        android:textColor="@color/colorBlockRgb242424"
        app:layout_constraintLeft_toRightOf="@+id/barrier"
        app:layout_constraintRight_toRightOf="@+id/bgView"
        app:layout_constraintTop_toTopOf="@+id/tvName"
        app:layout_constraintBottom_toBottomOf="@+id/tvName"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/userPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="136****2345"
        android:textSize="@dimen/textSize14"
        android:textColor="@color/colorBlockRgb242424"
        app:layout_constraintLeft_toLeftOf="@+id/userName"
        app:layout_constraintRight_toRightOf="@+id/bgView"
        app:layout_constraintTop_toTopOf="@+id/tvPhone"
        app:layout_constraintBottom_toBottomOf="@+id/tvPhone"
        app:layout_constraintHorizontal_bias="0"
        />

    <android.support.constraint.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="right"
        app:constraint_referenced_ids="tvName,tvPhone"/>

    <View
        android:id="@+id/divideLine3"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/divide_color"
        app:layout_constraintTop_toBottomOf="@+id/bgView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/bgView"
        app:layout_constraintBottom_toBottomOf="@+id/bgView"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="解除绑定"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/textSize16"
        app:layout_constraintTop_toBottomOf="@+id/divideLine3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.1"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/selector_button_corners_20_bg_white"/>

</android.support.constraint.ConstraintLayout>
