<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context="com.wzdq.fengcai.module.mine.shareholder.ApplyBecomeShareholderOfUserActivity">


    <TextView
        android:id="@+id/tvServiceNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="报单中心编号："
        app:layout_constraintTop_toTopOf="@id/etServiceNo"
        app:layout_constraintBottom_toBottomOf="@id/etServiceNo"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="15dp"
        />

    <EditText
        android:id="@+id/etServiceNo"
        android:layout_width="0dp"
        style="@style/EditTextInput"
        app:layout_constraintLeft_toRightOf="@id/tvServiceNo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="15dp"
        android:layout_marginTop="31dp"
        android:layout_marginLeft="15dp"
        android:textSize="@dimen/textSize14"
        android:textColor="@color/colorBlockRgb333333"
        android:hint="报单中心编号"
        />


    <TextView
        android:id="@+id/tvUserNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="会员编号："
        app:layout_constraintTop_toTopOf="@id/etUserNo"
        app:layout_constraintBottom_toBottomOf="@id/etUserNo"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="15dp"
        />

    <EditText
        android:id="@+id/etUserNo"
        android:layout_width="0dp"
        style="@style/EditTextInput"
        app:layout_constraintLeft_toRightOf="@id/tvUserNo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etServiceNo"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:textSize="@dimen/textSize14"
        android:textColor="@color/colorBlockRgb333333"
        android:hint="会员编号"
        />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="会员姓名："
        app:layout_constraintTop_toTopOf="@id/etUserName"
        app:layout_constraintBottom_toBottomOf="@id/etUserName"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="15dp"
        />

    <EditText
        android:id="@+id/etUserName"
        android:layout_width="0dp"
        style="@style/EditTextInput"
        app:layout_constraintLeft_toRightOf="@id/tvUserName"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etUserNo"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:textSize="@dimen/textSize14"
        android:textColor="@color/colorBlockRgb333333"
        android:hint="会员姓名"
        />


    <TextView
        android:id="@+id/tvUserPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="会员电话："
        app:layout_constraintTop_toTopOf="@id/etUserPhone"
        app:layout_constraintBottom_toBottomOf="@id/etUserPhone"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="15dp"
        />

    <EditText
        android:id="@+id/etUserPhone"
        android:layout_width="0dp"
        style="@style/EditTextInput"
        app:layout_constraintLeft_toRightOf="@id/tvUserPhone"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etUserName"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:textSize="@dimen/textSize14"
        android:textColor="@color/colorBlockRgb333333"
        android:hint="会员电话"
        />

    <TextView
        android:id="@+id/tvApplyMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="申请金额："
        app:layout_constraintTop_toTopOf="@id/etApplyMoney"
        app:layout_constraintBottom_toBottomOf="@id/etApplyMoney"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="15dp"
        />

    <EditText
        android:id="@+id/etApplyMoney"
        android:layout_width="0dp"
        style="@style/EditTextInput"
        app:layout_constraintLeft_toRightOf="@id/tvApplyMoney"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etUserPhone"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:textSize="@dimen/textSize14"
        android:textColor="@color/colorBlockRgb333333"
        android:hint="申请金额（元）"
        />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="0dp"
        style="@style/ConfirmButton"
        android:text="提交"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etApplyMoney"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:enabled="false"
        />

</android.support.constraint.ConstraintLayout>
