<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlMainContent"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:paddingLeft="15dp"
    android:paddingRight="10dp"
    android:background="@color/colorWhite">

    <com.ps.glidelib.GlideImageView
        android:id="@+id/bank_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/icon_icbc" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_toLeftOf="@+id/checkbox"
        android:layout_toRightOf="@+id/bank_icon"
        android:orientation="vertical">

        <TextView
            android:id="@+id/bankName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="中国工商银行"
            android:textColor="@color/colorBlockRgb242424"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/bankTailNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="尾号2369"
            android:textColor="@color/colorBlockRgb696969"
            android:textSize="14sp" />

    </LinearLayout>

    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:button="@drawable/selector_check_box_theme"
        android:clickable="false"
        android:visibility="gone" />

</RelativeLayout>
