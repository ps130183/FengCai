<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wzdq.fengcai.module.mine.setting.SettingActivity">

    <View
        android:id="@+id/bgView"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="@color/colorWhite"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="15dp"/>

    <com.wzdq.fengcai.view.MTextView
        android:id="@+id/bindPhone"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="绑定手机"
        android:textColor="@color/colorBlockRgb191919"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@id/bgView"
        app:layout_constraintRight_toRightOf="@id/bgView"
        app:layout_constraintTop_toTopOf="@id/bgView"
        app:layout_constraintBottom_toTopOf="@id/divideLine"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        app:imageIcon="@mipmap/icon_arrow_right"
        app:imageWidth="20dp"
        app:imageHeight="20dp"
        app:imageDirection="imageToRight"
        android:paddingRight="10dp"
        />

    <TextView
        android:id="@+id/noBindPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="未绑定"
        android:textSize="@dimen/textSize14"
        android:textColor="@color/colorRedRgbE43E44"
        app:layout_constraintRight_toRightOf="@id/bindPhone"
        app:layout_constraintTop_toTopOf="@id/bindPhone"
        app:layout_constraintBottom_toBottomOf="@id/bindPhone"
        android:layout_marginRight="40dp"
        />

    <View
        android:id="@+id/divideLine"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/divide_color"
        app:layout_constraintLeft_toLeftOf="@id/bgView"
        app:layout_constraintRight_toRightOf="@id/bgView"
        app:layout_constraintTop_toTopOf="@id/bgView"
        app:layout_constraintBottom_toBottomOf="@id/bgView"
        android:layout_marginLeft="15dp"/>

    <com.wzdq.fengcai.view.MTextView
        android:id="@+id/modifyPassword"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="修改密码"
        android:textColor="@color/colorBlockRgb191919"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@id/bgView"
        app:layout_constraintRight_toRightOf="@id/bgView"
        app:layout_constraintTop_toBottomOf="@id/divideLine"
        app:layout_constraintBottom_toBottomOf="@id/bgView"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        app:imageWidth="20dp"
        app:imageHeight="20dp"
        app:imageIcon="@mipmap/icon_arrow_right"
        app:imageDirection="imageToRight"
        android:paddingRight="10dp"
        />



    <View
        android:id="@+id/bgView1"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="@color/colorWhite"
        app:layout_constraintTop_toBottomOf="@id/bgView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="15dp"/>

    <com.wzdq.fengcai.view.MTextView
        android:id="@+id/contactUs"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="联系我们"
        android:textColor="@color/colorBlockRgb191919"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@id/bgView1"
        app:layout_constraintRight_toRightOf="@id/bgView1"
        app:layout_constraintTop_toTopOf="@id/bgView1"
        app:layout_constraintBottom_toTopOf="@id/divideLine1"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        app:imageWidth="20dp"
        app:imageHeight="20dp"
        app:imageIcon="@mipmap/icon_arrow_right"
        app:imageDirection="imageToRight"
        android:paddingRight="10dp"
        />

    <View
        android:id="@+id/divideLine1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/divide_color"
        app:layout_constraintLeft_toLeftOf="@id/bgView1"
        app:layout_constraintRight_toRightOf="@id/bgView1"
        app:layout_constraintTop_toTopOf="@id/bgView1"
        app:layout_constraintBottom_toBottomOf="@id/bgView1"
        android:layout_marginLeft="15dp"/>

    <com.wzdq.fengcai.view.MTextView
        android:id="@+id/aboutUs"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="关于我们"
        android:textColor="@color/colorBlockRgb191919"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@id/bgView1"
        app:layout_constraintRight_toRightOf="@id/bgView1"
        app:layout_constraintTop_toBottomOf="@id/divideLine1"
        app:layout_constraintBottom_toBottomOf="@id/bgView1"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        app:imageWidth="20dp"
        app:imageHeight="20dp"
        app:imageIcon="@mipmap/icon_arrow_right"
        app:imageDirection="imageToRight"
        android:paddingRight="10dp"
        />


    <com.wzdq.fengcai.view.MTextView
        android:id="@+id/quitLogin"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="退出登录"
        android:textColor="@color/colorBlockRgb191919"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@id/bgView1"
        app:layout_constraintRight_toRightOf="@id/bgView1"
        app:layout_constraintTop_toBottomOf="@id/bgView1"
        android:layout_marginTop="15dp"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        app:imageWidth="20dp"
        app:imageHeight="20dp"
        app:imageIcon="@mipmap/icon_arrow_right"
        app:imageDirection="imageToRight"
        android:paddingRight="10dp"
        />


    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/divide_color"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bgView"/>
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/divide_color"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bgView"/>

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/divide_color"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bgView1"/>

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/divide_color"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bgView1"/>

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/divide_color"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/quitLogin"/>

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/divide_color"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/quitLogin"/>
    
</android.support.constraint.ConstraintLayout>
