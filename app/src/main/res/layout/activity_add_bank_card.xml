<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wzdq.fengcai.module.mine.account.bank.AddBankCardActivity">

    <com.wzdq.fengcai.view.step.StepView
        android:id="@+id/stepView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/viewSpace16"
        android:layout_marginBottom="@dimen/viewSpace16"
        app:step_check_color="@color/colorAccent"
        app:step_not_check_color="@color/colorBlockRgbB3B3B3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/flContent"
        app:layout_constraintVertical_bias="0"
        />

    <FrameLayout
        android:id="@+id/flContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stepView"
        app:layout_constraintBottom_toBottomOf="parent"
        >

    </FrameLayout>
</android.support.constraint.ConstraintLayout>
