    <style name="DivideLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#efeff4</item>
    </style>

    <style name="EditTextInput">
        <item name="android:background">@drawable/shape_edittext_bg_corner4</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">@color/colorBlockRgb333333</item>
        <item name="android:textSize">@dimen/textSize14</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="singleLine">
        <item name="android:inputType">text</item>
        <item name="android:lines">1</item>
    </style>

    <style name="EditTextInputPhone">
        <item name="android:inputType">phone</item>
        <item name="android:maxLength">11</item>
        <item name="android:lines">1</item>
    </style>

    <style name="EditTextInputSMSCode">
        <item name="android:inputType">phone</item>
        <item name="android:maxLength">6</item>
        <item name="android:lines">1</item>
    </style>
    
    <style name="ConfirmButton">
        <item name="android:layout_height">44dp</item>
        <item name="android:background">@drawable/selector_button_corners_20</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/textSize18</item>
    </style>
